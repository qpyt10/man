${color grey}$alignc${execpi 60 date '+%_d %B %Y, %A'}
${color grey}${execpi 60 date '+day / week of year: %t%t  %j / %W'}
#${color grey}${execpi 60 date '+week of year: %t%t  %W'}
#${color grey}${execpi 60 date '+day of year:  %t%t  %j'}
#
#${color grey}$alignc${execpi 60 cal -m `date --date="1 month"  +%m` }
$hr
${color grey}$alignc${execpi 60 cal | sed '2,$d' }   
${color grey}${execpi 60 DJS=`date +%_d`; cal | sed '1d' | sed '/./!d' | sed 's/$/ /' | fold -w 21 | sed -n '/^.\{21\}/p' | sed 's/^/${alignc} /' | sed /" $DJS "/s/" $DJS "/" "'${color red}'"$DJS"'${color grey}'" "/}
